<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009245"
    android:orientation="vertical"
    tools:context=".Vistas.Login.RegistrarLoginActivity">


    <ImageView
        android:id="@+id/ima"
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/sup_regis"
        android:transitionName="logo_image" />

    <LinearLayout
        android:id="@+id/idLayou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ima"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont"
            android:padding="5dp"
            app:boxStrokeColor="@color/white"
            app:errorTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mont"
                android:hint="Nombre"
                android:transitionName="user_trans" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont"
            android:padding="5dp"
            app:boxStrokeColor="@color/white"
            app:errorTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mont"
                android:hint="Correo"
                android:inputType="textPersonName"
                android:transitionName="user_trans" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtContrase単a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont"
            android:padding="5dp"
            app:boxStrokeColor="@color/white"
            app:passwordToggleEnabled="true"
            app:errorTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mont"
                android:hint="Contrase単a"
                android:inputType="textPassword"
                android:transitionName="user_trans" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtRepetContrase単a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont"
            android:padding="5dp"
            app:boxStrokeColor="@color/white"
            app:passwordToggleEnabled="true"
            app:errorTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mont"
                android:hint="Repetir Contrase単a"
                android:inputType="textPassword"
                android:transitionName="pass_trans" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idLayou"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:fontFamily="@font/mont"
        android:text="@string/Registrar"
        android:textColor="#009245"
        android:transitionName="registrar_trans" />

    <Button
        android:id="@+id/btnCuentaYa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegistrar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:background="#009245"
        android:fontFamily="@font/mont"
        android:text="Ya Tengo una cuenta"
        android:textColor="@color/white"
        android:transitionName="button_trans" />

</RelativeLayout>